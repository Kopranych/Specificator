#include "Create_spec.h"
#define INPUT_ARRAY_LEN 40

int main(int argc, char* argv[])
{

	char command[INPUT_ARRAY_LEN], name[INPUT_ARRAY_LEN], numeral[INPUT_ARRAY_LEN], arr[INPUT_ARRAY_LEN];
	for (;;)
	{
		printf("enter your command!\n");
//		gets(arr);
		scanf("%s %s %s", command, name, numeral);

//		command = strtok(arr, " ");
//		name = strtok('\0', " ");
//		numeral = strtok('\0', " ");

		if (!strcmp("Create", command))
		{
			printf("spec %s was create\n", name);
			device_spec(name, numeral);
		}
		else if (!strcmp("Complect", command))
		{
//			printf("Enter name your spec\n");
			complect(name, numeral);
		}
		else
		{
			printf("Enter the correct name order\n");
		}

		printf("done\n");
	}
}
